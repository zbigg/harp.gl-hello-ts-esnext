{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "*.ts"
    ]
}
